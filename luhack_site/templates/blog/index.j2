{% extends "blog/base.j2" %}

{% from "blog/date_accordion.j2" import blog_accordion with context %}
{% from "blog/preview.j2" import blog_preview with context %}

{% block content %}
    <div class="posts">
        {% for (blog, content) in blog %}
            {{ blog_preview(blog, content, url_for('blog_view', slug=blog.slug)) }}
        {% endfor %}
    </div>
{% endblock %}

{% block header_content %}
    {{ blog_accordion(grouped_blogs) }}
{% endblock %}
